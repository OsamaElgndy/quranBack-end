
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id      Int       @id @default(autoincrement())
  name    String
  students Student[] // ðŸ‘ˆ One-to-many: A teacher has many students
}

model Student {
  id             Int     @id @default(autoincrement())
  name           String
  age            Int
  levelQuran     String
  phoneWhatsapp  String
  address        String
  degree         Int?
  ranking        Int?
  teacherId      Int?    // ðŸ‘ˆ Foreign key
  teacher        Teacher? @relation(fields: [teacherId], references: [id])
}


